{
  "compilerOptions": {
    "outDir": "build", 
    "module": "CommonJS",
    "target": "ES2020",
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@data-access/*": ["./data-access/*"],
      "@fs-access/*": ["./fs-access/*"],
      "@services/*": ["./services/*"],
      "@controllers/*": ["./controllers/*"],
      "@utils/*": ["./utils/*"],
      "@backend/*": ["./*"],
      "@root/*": ["../*"]
    }
  },
  "include": ["src/**/*"]
}